{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ComplianceRulesResponse",
  "description": "Response from mock Compliance Rules API. Delivered as JSON from data/compliance_rules.json.",
  "type": "object",
  "required": ["rule_set_id", "version", "rules"],
  "properties": {
    "rule_set_id": { "type": "string" },
    "version": { "type": "string" },
    "description": { "type": "string" },
    "rules": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "category", "description", "severity"],
        "properties": {
          "id": { "type": "string" },
          "category": { "type": "string", "description": "e.g. forbidden_language, pressure_tactics, misrepresentation, fair_engagement" },
          "description": { "type": "string" },
          "severity": { "type": "string", "enum": ["low", "medium", "high", "critical"] },
          "keywords": { "type": "array", "items": { "type": "string" } },
          "regex_hint": { "type": ["string", "null"] }
        }
      }
    }
  }
}
